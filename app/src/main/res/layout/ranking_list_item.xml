<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/input_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/rankingListNumberTextView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:textColor="@color/orange"
        android:text="1"
        android:gravity="center"
        android:background="@drawable/title_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rankingListUserNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rankingListNumberTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rankingListScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/rankingListUserNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/rankingListUserNameTextView" />

    <ImageView
        android:id="@+id/rankingListScoreImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/rankingListScoreTextView"
        app:layout_constraintTop_toBottomOf="@+id/rankingListUserNameTextView"
        android:src="@drawable/star_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>